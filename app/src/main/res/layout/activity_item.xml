<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:id="@+id/nsv_item"
        android:layout_height="match_parent"
        tools:context=".ItemActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">

        <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="365dp">

            <ImageView
                    android:id="@+id/iv_item"
                    android:scaleType="fitXY"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"/>

            <ImageView
                    android:id="@+id/iv_arrow_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/round_arrow_back_24"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    app:layout_constraintTop_toTopOf="parent"/>
        </android.support.constraint.ConstraintLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingLeft="16dp"
                android:gravity="center_vertical"
                android:layout_height="64dp">

            <ImageView
                    android:layout_marginRight="8dp"
                    android:id="@+id/iv_item_profile"
                    android:layout_width="48dp"
                    android:src="@drawable/round_account_circle_24"
                    android:layout_height="48dp"/>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_item_name"
                        android:layout_width="wrap_content"
                        android:text="NAME"
                        android:textColor="#000000"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/tv_item_location"
                        android:layout_width="wrap_content"
                        android:textSize="13sp"
                        android:textColor="#9E9E9E"
                        android:text="LOCATION"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:background="#E0E0E0"
                android:layout_height="1px"/>

        <LinearLayout
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

            <TextView
                    android:paddingStart="16dp"
                    android:gravity="center_vertical"
                    android:id="@+id/tv_item_title"
                    android:textColor="#0A0A0A"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:text="TITLE"/>

            <TextView
                    android:paddingStart="16dp"
                    android:layout_marginTop="2dp"
                    android:gravity="center_vertical"
                    android:textSize="14sp"
                    android:textColor="#9E9E9E"
                    android:id="@+id/tv_item_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CATEGORY"/>

            <TextView
                    android:id="@+id/tv_item_content"
                    android:layout_marginTop="16dp"
                    android:paddingStart="16dp"
                    android:textColor="#0E0E0E"
                    android:textSize="15sp"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CONTENT"/>

            <TextView
                    android:layout_marginTop="16dp"
                    android:paddingStart="16dp"
                    android:id="@+id/tv_item_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ITEM_INFO"
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"/>
        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:background="#E0E0E0"
                android:layout_height="1px"/>

        <TextView
                android:paddingStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:textSize="16sp"
                android:textColor="#0A0A0A"
                android:textStyle="bold"
                android:text="이 게시글 신고하기"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:background="#E0E0E0"
                android:layout_height="1px"/>

        <TextView
                android:id="@+id/tv_item_comment"
                android:paddingStart="16dp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="24dp"
                android:textSize="16sp"
                android:textColor="#0A0A0A"
                android:textStyle="bold"
                android:text="COMMENT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="64dp">

            <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/tv_item_price"
                        android:textColor="#0A0A0A"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:text="PRICE"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:gravity="center"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:background="@color/colorPrimary"
                    android:layout_height="match_parent">

                <TextView
                        android:id="@+id/tv_item_trade"
                        android:textSize="16sp"
                        android:textColor="#FFFFFF"
                        android:textStyle="bold"
                        android:text="채팅으로 거래하기"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>